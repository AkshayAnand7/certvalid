rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    // Allow any user with @sys.com email to be treated as admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email.matches('.*@sys[.]com$');
    }

    // USERS COLLECTION
    match /users/{userId} {
      // Users can read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admins can read and delete all user data
      allow read, delete: if isAdmin();
    }

    // CERTIFICATES COLLECTION
    match /certificates/{certId} {
      // Public read access for verification
      allow read: if true;
      // Only authenticated users can create (upload)
      allow create: if request.auth != null;
      // Only Admins can update/verify
      allow update: if isAdmin();
    }
  }
}
